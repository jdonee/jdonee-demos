<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jdonee.insight.task.dao.TaskDao">

  <cache />
  
  <!-- 通用条件和结果语句 -->
  <sql id="insertElements">
  		(title,description,user_id)
  </sql>
  
  <sql id="condition">
  		<where>
			<if test="params.title!=null">
				AND title LIKE CONCAT(CONCAT('%', #{params.title}), '%')
			</if>
			<if test="params.id!=null">
				AND id=#{params.id} 
			</if>
			<if test="params.userId!=null">
				AND user_id=#{params.userId} 
			</if>
  		</where>
  </sql>
  
  <!-- 增删改查 -->
  <insert id="save" parameterType="Task" useGeneratedKeys="true" keyProperty="id">
  		INSERT INTO ${tableName}
			<include refid="insertElements"/>
  		VALUES
  			(#{title},#{description},#{userId})
  </insert>
  
  <delete id="delete">
    DELETE FROM 
    	${tableName} 
    WHERE 
    	id = #{id}
  </delete>
  
  <update id="update" parameterType="Task">
		UPDATE ${tableName}
	  	<trim prefix="SET" suffixOverrides=",">
	  			<if test="title!=null">
					title=#{title}, 
				</if>
				<if test="description!=null">
					description=#{description}, 
				</if>
				<if test="userId!=null">
					user_id=#{userId},
				</if>
	  		</trim>
  		WHERE 
  			id=#{id}
  </update>

  <select id="findOneById" resultType="Task" >
	SELECT * 
		FROM ${tableName} 
	WHERE 
		id = #{id}
	LIMIT 1
  </select>
  
   <select id="findAll" resultType="Task" >
	SELECT * 
		FROM ${tableName} 
  </select>

  <!-- 分页和统计 -->
  <select id="count" resultType="int">
  	SELECT count(id) 
		FROM ${tableName} 
  	<include refid="condition"/>
  </select>
  
  <select id="findPageList" resultType="Task">
  	SELECT * 
		FROM ${tableName} 
  	<include refid="condition"/>
  </select>
  
  <!--自定义条件查询-->
  <select id="findOneByParams" resultType="Task">
  	SELECT * FROM 
  		${tableName}
  	<include refid="condition"/>
  	 LIMIT 1
  </select>
  
  <select id="findListByParams" resultType="Task">
  	SELECT * FROM 
  		${tableName}
  	<include refid="condition"/>
  </select>
  
  <!-- 批量增加\删除 -->
  <insert id="saveBatch" parameterType="List">
		INSERT INTO ${tableName}
			<include refid="insertElements"/>
  		VALUES
  			<foreach collection="list" item="item" index="index" separator=",">
  				(#{item.title},#{item.description},#{item.userId})
  			</foreach>
  </insert>
	
	<delete id="deleteBatch" parameterType="List">
		DELETE FROM 
    		${tableName} 
	    WHERE 
	    	id IN
	    		<foreach item="item" index="index" collection="list" open="(" separator="," close=")">
		        		#{item}
		    	</foreach>
	</delete>
	
	<delete id="deleteBatchByParams">
		DELETE FROM 
    		${tableName}
    	<include refid="condition"/>
	</delete>
	
</mapper>